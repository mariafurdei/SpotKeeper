<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/spot_list_item">

    <Button
        android:text="Use current location"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@mipmap/ic_use_cur_loc"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/btnUseCurrentLocation"
        android:background="@color/colorButton" />


    <TextView
        android:text="Spot name: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:paddingBottom="0dp"
        android:id="@+id/new_spot_name_label"/>

    <EditText
        android:id="@+id/new_spot_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="16dp"
        android:paddingTop="0dp"
        android:text=""
        android:inputType="text" />

    <TextView
        android:text="Spot address: "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:paddingBottom="0dp"
        android:id="@+id/new_spot_address_label"
        android:enabled="true"/>

    <EditText
        android:id="@+id/new_spot_address_edit_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="16dp"
        android:paddingTop="0dp"
        android:text=""
        android:inputType="text" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="bottom">

        <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_weight=".50"
            android:id="@+id/CancelAddNewSpotBtn"
            android:background="@color/colorButton" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <Button
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_weight=".50"
            android:id="@+id/SaveNewSpotBtn"
            android:background="@color/colorButton" />

    </LinearLayout>

</LinearLayout>
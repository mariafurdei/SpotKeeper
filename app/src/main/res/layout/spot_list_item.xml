<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/spots_list_item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="icon"
        android:src="@drawable/ic_spots_list_item"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/spots_list_item_icon">

        <TextView
            android:id="@+id/spot_name"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_toRightOf="@id/spots_list_item_icon"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/spot_address"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spot_name"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@id/spots_list_item_icon">

        </TextView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/add_to_fav_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fav_but_draw_source"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="0dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:background="#89d15e" />


</RelativeLayout>